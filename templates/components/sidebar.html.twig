<section class="content">
    <aside>
        <div class="espace-utilisateur">

            <div class="info-user">{% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p>Votre email : {{ app.user.mail }}</p>
                    <p>Votre nom :{{ app.user.nom }}</p>
                    <p>Votre prénom :  {{ app.user.prenom }}</p>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('add_article') }}"><button>Ajouter un article</button></a>
                        <a href="{{ path('add_event') }}"><button>Ajouter un évenement</button></a>
                        <a href="{{ path('index_email') }}"><button>Envoyer newsletter</button></a>
                    {% endif %}
                    <a href="{{ path('deconnexion') }}"><button>Déconnexion</button></a>
                {% else %}
                    <a href="{{ url('security_connexion') }}"><button type="button" class="btn btn-secondary btn-lg btn-block">Connexion</button></a>
                    <a href="{{ url ('inscription') }}"><button type="button" class="btn btn-secondary btn-lg btn-block">Inscription</button></a>
                {% endif %}</div>
            <div class="register"></div>
            <div class="login-logout"></div>
            <div class="registration-form">

            </div>
        </div>

        <div class="events">
            <h3>Les prochains évenements</h3>
            {% for evenement in evenements %}
                <div class="entry1">
                    <p>{{ evenement.titre }}</p>
                    <h4>{{ evenement.date | date('d/m/Y') }}</h4>
                </div>
            {% endfor %}

        </div>


    </aside>